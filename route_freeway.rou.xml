<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

<!-- Passenger Car Type -->
<!-- Willingness for strategic lane changes --><!-- Willingness to help others change lanes --><!-- Lane change for speed gain --><!-- Tendency to keep right -->
       
<vType id="passenger_1" vClass="passenger" guiShape="passenger"
       color="210,0,0"
       laneChangeModel="LC2013" 
       lcStrategic="0" lcSpeedGain="0"  lcKeepRight="0"  lcCooperative="0"/>  
       
<vType id="passenger_2" vClass="passenger" guiShape="passenger"
       minGap="2.5" maxSpeed="45.0" accel="2.5" decel="3.0"
	   laneChangeModel="LC2013" 
	   color="0,165,0"
       lcStrategic="0" lcSpeedGain="0" lcKeepRight="0" lcCooperative="0"/>   

<vType id="passenger_3" vClass="passenger" guiShape="passenger"
	   laneChangeModel="LC2013" 
       lcStrategic="0" lcSpeedGain="0" lcKeepRight="0" lcCooperative="0"/> 

<!-- Emergency Vehicle Type -->
<vType id="emergency" vClass="emergency" guiShape="emergency"
       minGap="2.5" maxSpeed="25.0" accel="3.5" decel="4.5"
       emergencyDecel="6.0" length="5.0" width="1.8"
       collisionMinGapFactor="0" carFollowModel="Krauss" sigma="0.5"
       color="0,0,0"/>

<!-- ==================== Straight Routes ==================== -->
<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

  <!-- Your vehicle types (kept as-is) -->
  <vType id="passenger_1" vClass="passenger" guiShape="passenger"
         color="210,0,0" laneChangeModel="LC2013"
         lcStrategic="0" lcSpeedGain="0" lcKeepRight="0" lcCooperative="0"/>
  <vType id="passenger_2" vClass="passenger" guiShape="passenger"
         minGap="2.5" maxSpeed="45.0" accel="2.5" decel="3.0"
         laneChangeModel="LC2013" color="0,165,0"
         lcStrategic="0" lcSpeedGain="0" lcKeepRight="0" lcCooperative="0"/>
  <vType id="passenger_3" vClass="passenger" guiShape="passenger"
         laneChangeModel="LC2013"
         lcStrategic="0" lcSpeedGain="0" lcKeepRight="0" lcCooperative="0"/>
  <vType id="emergency" vClass="emergency" guiShape="emergency"
         minGap="2.5" maxSpeed="25.0" accel="3.5" decel="4.5"
         emergencyDecel="6.0" length="5.0" width="1.8"
         collisionMinGapFactor="0" carFollowModel="Krauss" sigma="0.5"
         color="0,0,0"/>

  <!-- Two straight routes (use real, connected edge IDs from your net) -->
  <route id="r_L_R" edges="E#L-R"/>
  <route id="r_R_L" edges="E#R-L"/>

  <!-- LOW density: one flow per lane, both directions; 0â€“75 s; equally spaced by 'period' -->
  <flow id="L0_low" type="passenger_2" route="r_L_R" begin="0" end="75" period="5"
        departLane="0" departPos="base" departSpeed="max"/>
  <flow id="L1_low" type="passenger_2" route="r_L_R" begin="0" end="75" period="5"
        departLane="1" departPos="base" departSpeed="max"/>
  <flow id="L2_low" type="passenger_2" route="r_L_R" begin="0" end="75" period="5"
        departLane="2" departPos="base" departSpeed="max"/>

  <flow id="R0_low" type="passenger_2" route="r_R_L" begin="0" end="75" period="5"
        departLane="0" departPos="base" departSpeed="max"/>
  <flow id="R1_low" type="passenger_2" route="r_R_L" begin="0" end="75" period="5"
        departLane="1" departPos="base" departSpeed="max"/>
  <flow id="R2_low" type="passenger_2" route="r_R_L" begin="0" end="75" period="5"
        departLane="2" departPos="base" departSpeed="max"/>

</routes>
